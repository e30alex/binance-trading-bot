# Application
PORT=3000

# Binance API Configuration
# Get your API keys from https://www.binance.com/en/my/settings/api-management
# For testnet, use https://testnet.binance.vision/
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Set to 'true' for testnet, 'false' for live trading (NOT RECOMMENDED until thoroughly tested)
USE_BINANCE_TESTNET=true

# Discord Bot Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Notification Channel ID (optional)
# You can also use the /set_channel command in Discord to set this dynamically
DISCORD_NOTIFICATION_CHANNEL_ID=

# Bot State File (optional, defaults to 'bot_state.json')
BOT_STATE_FILE=bot_state.json
